doctype html
html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
    link(rel='stylesheet' href='css/style.css')
    title Registro Productos
    style.
      .container{
        max-width: 960;
      }
    body
      .container
        .pb-3.mb-5.bg-body.rounded(class='shadow.lg')
          h4 Datos de los Productos
          form(action='/crear' method='POST')
            .col-md-6
              label.form-label(for='NombreProducto') NombreProducto
              input#NombreProducto.form-control(name='NombreProducto' type='text' required='')
            .col-md-6
              label.form-label(for='Precio') Precio
              input#Precio.form-control(name='Precio' type='number' required='')
            .col-md-6
              label.form-label(for='Cantidad') Cantidad
              input#Cantidad.form-control(name='Cantidad' type='number' required='')
            .col-md-6
              label.form-label(for='Categoria') Categoria
              input#Categoria.form-control(name='Categoria' type='text' required='')
            button.w-100.btn.btn-guardar(type='submit' class='btn.lg')
              i.bi.bi-save
              | Registar Productos
        table#tablaProductos.table.mt-4
          thead
            tr
              th(style='display: none;') ID
              th NombreProducto
              th Precio
              th Cantidad
              th Categoria
              th Acciones
          tbody
            each producto in productos
              tr
                td(style='display: none;')= producto._id
                td= producto.NombreProducto
                td= producto.Precio
                td= producto.Cantidad
                td= producto.Categoria
                td
                  a.btnEditar.btn.btn-outline-primary.bi.bi-pencil(type='button')
                  a.btn.btn-outline-danger.bi.bi-trash(href=`/borrar/${producto._id}`)
          #modalproducto.modal.fade(tabindex='-1' aria-labelledby='modalproducto' aria-hidden='true')
            .modal-dialog
              .modal-content
                .modal-header.bg-primary.text-white
                  h5#exampleModalLabel.modal-title Editar Info
                  button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                .modal-body
                  form(action='/editar' method='POST')
                    input#id_editar(type='text' name='id_editar' hidden='')
                    .mb-3
                      label.col-form-label(for='NombreProducto_editar') NombreProducto:
                      input#NombreProducto_editar.form-control(name='NombreProducto_editar' type='text' value='')
                    .mb-3
                      label.col-form-label(for='Precio_editar') Precio:
                      input#Precio_editar.form-control(name='Precio_editar' type='number' value='')
                    .mb-3
                      label.col-form-label(for='Cantidad_editar') Cantidad:
                      input#Cantidad_editar.form-control(name='Cantidad_editar' type='number' value='')
                    .mb-3
                      label.col-form-label(for='Categoria_editar') Categoria:
                      input#Categoria_editar.form-control(name='Categoria_editar' type='text' value='')
                    .modal-footer
                      button.btn.btn-primary(type='submit') Actualizar
  // Optional JavaScript; choose one of the two!
  // Option 1: Bootstrap Bundle with Popper
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
  script(src='js/code.js')